@model IEnumerable<BookStore.Models.Coupon>

@{
	ViewData["Title"] = "Index";
	Layout = "_Layout2";

}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Giftcode)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Discount)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ExpireDate)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Giftcode)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Discount)%
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ExpireDate)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

