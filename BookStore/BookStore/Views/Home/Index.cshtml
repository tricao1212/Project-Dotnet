@model IEnumerable<BookStore.Models.Book>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";

    int pageSize = 4; // Số mục trên mỗi trang
    int currentPage = 1; // Trang hiện tại (bạn có thể lấy từ controller)
    var items = Model.Skip((currentPage - 1) * pageSize).Take(pageSize);
    // Tính tổng số trang
    int totalPages = (int)Math.Ceiling((double)Model.Count() / pageSize);
    bool showPaging = totalPages > 1;
}
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/carousels/carousels-1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/carousels/carousels-2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/carousels/carousels-3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container">
    <h1>New Release</h1>
    <div class="row">
        @foreach (var item in items)
        {
            <div class="col-md-3">
                <div class="container">
                    <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.ImgURL)">
                    <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                    <p>@Html.DisplayFor(modelItem => item.Price)</p>
                    <p>Remain: @Html.DisplayFor(modelItem => item.Quantity)</p>
                    <button class="btn btn-primary">Detail</button>
                    <button class="btn btn-outline-warning">Add to cart</button>
                </div>
                
            </div>
        }
    </div>
 @*    @if (showPaging)
    {
        <nav aria-label="Page navigation">
